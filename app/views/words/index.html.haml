%h1 Listing words

%table{class: 'table table-condensed table-hover'}
  %thead
    %tr
      %th Lang code 1
      %th Text 1
      %th Lang code 1
      %th Text 2
      %th
      %th
      %th

  %tbody
    - @words.each do |word|
      %tr
        %td= language_name(word.lang_code1, I18n.locale)
        %td= word.text1
        %td= language_name(word.lang_code2, I18n.locale)
        %td= word.text2
        %td= link_to 'Show', word, class: 'btn btn-default btn-xs'
        %td= link_to 'Edit', edit_word_path(word), class: 'btn btn-default btn-xs'
        %td= link_to 'Destroy', word, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-xs'

%br

= link_to 'Add word', new_word_path, class: 'btn btn-primary'
