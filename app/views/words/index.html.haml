%h1 Listing words

%table
  %thead
    %tr
      %th Lang from
      %th Lang to
      %th Text
      %th Translation
      %th
      %th
      %th

  %tbody
    - @words.each do |word|
      %tr
        %td= word.lang_from
        %td= word.lang_to
        %td= word.text
        %td= word.translation
        %td= link_to 'Show', word
        %td= link_to 'Edit', edit_word_path(word)
        %td= link_to 'Destroy', word, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

