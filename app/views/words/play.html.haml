-if @cards
  %div{class: 'row', id: 'cards'}
    %div{class: 'panel panel-default'}
      %div{class: 'panel-heading'}
        %h3{class: 'text-center word', 'data-word-id': @cards[:word].id}
          - word = @cards[:word]
          = format_word(word, @lang_pair.first)
          -if word.pos
            %span{class: 'label label-info'}
              = word.pos
      %div{class: 'panel-body'}
        -@cards[:translations].each_slice(2) do |sub_array|
          %div{class: 'row'}
            -sub_array.each do |tr|
              %div{class: 'col-md-6 col-sm-6 col-xs-12'}
                %button{class: 'btn btn-default btn-lg col-md-12 col-sm-12 col-xs-12 card', 'data-word-id': tr.id}
                  = format_word(tr, @lang_pair.second)
      %div{class: 'row'}
        %button{id: 'next-word', class: 'btn btn-default btn-lg disabled center-block hidden'}
          Next word
        %button{id: 'skip-word', class: 'btn btn-warning btn-lg center-block'}
          Don't know
