.field.form-group
  = label_tag :q, 'Search'
  .input-group
    = text_field_tag :q, @word.text1, class: 'form-control'
    .input-group-addon#clear_search.cursor-pointer
      %span.glyphicon.glyphicon-remove-circle
.actions.form-group
  = button_tag 'Get translations', id: 'translate', class: 'btn btn-default'
  = button_tag 'Add words', id: 'add-words',class: 'btn btn-primary'

%table{class: 'table table-condensed table-hover'}
  %thead
    %th
      %span{class: 'glyphicon glyphicon-ok cursor-pointer select-all', 'aria-hidden': 'true'}
    %th
      Lang 1
    %th
      Lang 2
    %th
      Text 1
    %th
      Text 2
    %th
      Part of speech
  %tbody
    - if @word.valid?
      %tr{class: 'translation cursor-pointer'}
        %td{class: 'status'}
          %span{class: 'glyphicon glyphicon-ok', 'aria-hidden': 'true'}
        = render partial: 'as_row', locals: {word: @word, lang_pair: @lang_pair}
